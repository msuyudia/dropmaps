    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_16"
    android:paddingEnd="@dimen/margin_16"
    android:paddingBottom="@dimen/margin_16">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_place_name"
        style="@style/TextViewPlaceNameTheme"
        tools:text="Home sweet home"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_place_address"
        style="@style/TextViewPlaceAddressTheme"
        tools:text="Jl. Sukamulya VI No. 174, RT.8/RW.1, Kel. Harapan Mulia, Kec. Kemayoran, Jakarta Pusat"/>

</LinearLayout>